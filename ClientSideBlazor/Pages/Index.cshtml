@page
@using global::Shared.Models
@model ClientSideBlazor.Pages.IndexModel

@{
    ViewData["Title"] = "Home";
    var userState = Model.UserState; // Access UserState from the model
}

<h1>Welcome to the Home Page</h1>

@if (Model.UserState != null && !string.IsNullOrEmpty(Model.UserState.Username))
{
    <p>Welcome, @Model.UserState.Username!</p>
    <!-- Display the content accessible to logged-in users -->
}
else
{
    <p>Please log in to access this page.</p>
    <!-- Display a login form or redirect to the login page -->
}
