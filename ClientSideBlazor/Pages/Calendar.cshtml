@page "/Calendar"
@model ClientSideBlazor.Pages.CalendarModel

<table class="table table-bordered">
    <thead>
        <tr>
            @for (int i = 0; i < 7; i++)
            {
                var currentDate = Model.WeekStart.AddDays(i);
                <th>@currentDate.ToString("dddd")</th>
            }
        </tr>
    </thead>
    <tbody>
        <tr>
            @for (int i = 0; i < 7; i++)
            {
                var currentDate = Model.WeekStart.AddDays(i);
                <td>
                    <div class="day-box">
                        <!-- Add your to-do boxes or containers here for each day -->
                        @if (Model.EventsByDay.ContainsKey(currentDate))
                        {
                            foreach (var evt in Model.EventsByDay[currentDate])
                            {
                                <div class="event">
                                    <span>@evt.Title</span>
                                    <span>@evt.Description</span>
                                </div>
                            }
                        }
                        <div class="add-box-container">
                            <form method="post" onsubmit="return false;">
                                <input type="hidden" name="date" value="@currentDate.ToString("yyyy-MM-dd")" />
                                <input type="text" name="newToDo" placeholder="Enter a new to-do" />
                                <button type="button" onclick="addTodo('@currentDate.ToString("yyyy-MM-dd")')">Add</button>
                            </form>
                        </div>
                        <div id="todoBoxContainer-@currentDate.ToString("yyyy-MM-dd")">
                            @if (Model.ToDoBoxes.ContainsKey(currentDate))
                            {
                                foreach (var box in Model.ToDoBoxes[currentDate])
                                {
                                    <div class="to-do-box">
                                        <span>@box</span>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </td>
            }
        </tr>
    </tbody>
</table>

<script>
    function addTodo(date) {
        var input = document.querySelector('input[name="newToDo"]');
        var todo = input.value.trim();
        if (todo !== "") {
            var container = document.querySelector('#todoBoxContainer-' + date);
            var div = document.createElement('div');
            div.className = 'to-do-box';
            div.innerHTML = '<span>' + todo + '</span>';
            container.appendChild(div);
            input.value = "";
        }
    }
</script>

<style>
    .to-do-box {
        border: 1px solid #ccc;
        background-color: #b6effb;
        margin-top: 2px;
        margin-bottom: 2px;
    }
</style>
