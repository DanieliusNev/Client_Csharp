@page
@model ClientSideBlazor.Pages.CalendarModel

@{
    ViewData["Title"] = "Calendar";
}

<h3>Calendar</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            @for (int i = 0; i < 7; i++)
            {
                var currentDate = Model.WeekStart.AddDays(i);
                <th>@currentDate.ToString("dddd")</th>
            }
        </tr>
    </thead>
    <tbody>
        <tr>
            @for (int i = 0; i < 7; i++)
            {
                var currentDate = Model.WeekStart.AddDays(i);
                <td>
                    <div class="day-box">
                        <!-- Add your to-do boxes or containers here for each day -->
                        @if (Model.EventsByDay.ContainsKey(currentDate))
                        {
                            foreach (var evt in Model.EventsByDay[currentDate])
                            {
                                <div class="event">
                                    <span class="event-title">@evt.Title</span>
                                </div>
                            }
                        }
                        <div class="add-box-container">
                            <form method="post" asp-page-handler="AddToDo" asp-route-date="@currentDate.ToString("yyyy-MM-dd")">
                                <input type="text" name="newToDo" placeholder="Enter a new to-do" />
                                <button type="submit">Add</button>
                            </form>
                        </div>
                        <div id="todoBoxContainer-@currentDate.ToString("yyyy-MM-dd")">
                            @if (Model.ToDoBoxes.ContainsKey(currentDate))
                            {
                                foreach (var box in Model.ToDoBoxes[currentDate])
                                {
                                    <div class="to-do-box">
                                        <span>@box</span>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </td>
            }
        </tr>
    </tbody>
</table>

<style>
    .day-box {
        padding: 10px;
    }
    
    .event {
        background-color: lightblue;
        margin-bottom: 5px;
        padding: 5px;
        border-radius: 5px;
    }
    
    .event-title {
        font-weight: bold;
    }
    
    .add-box-container {
        margin-top: 10px;
    }
    
    .to-do-box {
        background-color: lightgray;
        margin-bottom: 5px;
        padding: 5px;
        border-radius: 5px;
    }
</style>


@section Scripts {
    <script>
        function addTodo() {
            var input = document.querySelector('input[name="newToDo"]');
            var todo = input.value.trim();
            if (todo !== "") {
                input.parentNode.submit();
            }
        }
    </script>
}
