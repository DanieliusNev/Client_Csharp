@page "/"

@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <NotAuthorized>
        <div class="container text-center">
            <h2 class="text-black">Welcome to the Fitness with Friends application!</h2>
            <p class="text-black-50">Track, plan, and share your workouts with other users.</p>
            <p class="text-black-50">To access more features, please create an account or log in.</p>
        </div>
    </NotAuthorized>
    <Authorized>
        <div class="container text-center">
            <h1 class="mt-5">Hello, @context.User.Identity.Name!</h1>
        </div>
    </Authorized>
</AuthorizeView>

<PageTitle>Index</PageTitle>
